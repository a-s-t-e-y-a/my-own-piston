#!/usr/bin/env bash

# Put instructions to run the runtime with JSON support
if [ ! -f $1.class ]; then
    # If not compiled yet, compile first
    mv $1 $1.java
    javac -cp "/usr/share/java/*:./lib/json/*:." $1.java
    java -cp "/usr/share/java/*:./lib/json/*:." ${1} "$@"
else
    # If already compiled, just run
    java -cp "/usr/share/java/*:./lib/json/*:." ${1} "$@"
fi